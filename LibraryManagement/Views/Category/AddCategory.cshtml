@model LibraryManagement.Models.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category Add</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
           <input class="form-check-input" asp-for="ActiveStatus" type="hidden" value="true"/>
             <br/>
           <div class="form-group">
               <input type="submit" value="Save" class="btn btn-primary" />
               <a asp-action="ListCategory" class="btn btn-primary">Back to List</a>
           </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
