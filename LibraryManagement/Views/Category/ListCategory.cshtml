@model IEnumerable<LibraryManagement.Models.Category>

@{
    ViewData["Title"] = "ListCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>
<p>
    <a asp-action="AddCategory" class="btn btn-primary">Create New</a>
</p>
<table id="datatablesSimple">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
           
            <td>
                <a asp-action="EditCategory" asp-route-id="@item.CategoryId"><i class='fa fa-pencil'></i></a> &nbsp;&nbsp;
                <a asp-action="CategoryDetails" asp-route-id="@item.CategoryId"><i class="fa-regular fa-eye"></i></a> &nbsp;&nbsp;
                <a asp-action="CategoryDelete" asp-route-id="@item.CategoryId"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
