@model IEnumerable<LibraryManagement.Models.Author>

@{
    ViewData["Title"] = "ListAuthor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Author List</h1>

<p>
    <a asp-action="AddAuthor" class="btn btn-primary">Create New</a>
</p>
<table id="datatablesSimple">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            
            <td>
                <a asp-action="EditAuthor" asp-route-id="@item.AuthorId"><i class='fa fa-pencil'></i></a> &nbsp;&nbsp;
                <a asp-action="DetailsAuthor" asp-route-id="@item.AuthorId"><i class="fa-regular fa-eye"></i></a> &nbsp;&nbsp;
                <a asp-action="DeleteAuthor" asp-route-id="@item.AuthorId"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
