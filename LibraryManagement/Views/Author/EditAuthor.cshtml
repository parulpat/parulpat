@model LibraryManagement.Models.Author

@{
    ViewData["Title"] = "EditAuthor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Author Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateAuthor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuthorId" />
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
          
                    <input class="form-check-input" asp-for="ActiveStatus" type="hidden" value="true"/> 
                <br/>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="ListAuthor" class="btn btn-primary">Back to List</a>
                    </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
