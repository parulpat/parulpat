@model LibraryManagement.Models.Book

@{
    ViewData["Title"] = "CreateBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book Create</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="SaveBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-lg-6">
                    <label asp-for="BookTitle" class="control-label"></label>
                    <input asp-for="BookTitle" class="form-control" />
                    <span asp-validation-for="BookTitle" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(@ViewBag.Category,"CategoryId","CategoryName"))"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-6">
                    <label asp-for="AuthorId" class="control-label"></label>
                    <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag.Author,"AuthorId","AuthorName"))"></select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <label asp-for="Copies" class="control-label"></label>
                    <input asp-for="Copies" class="form-control" />
                    <span asp-validation-for="Copies" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-6">
                    <label asp-for="BookPublication" class="control-label"></label>
                    <input asp-for="BookPublication" class="form-control" />
                    <span asp-validation-for="BookPublication" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <label asp-for="PublisherName" class="control-label"></label>
                    <input asp-for="PublisherName" class="form-control" />
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-6">
                    <label asp-for="ISBNNo" class="control-label"></label>
                    <input asp-for="ISBNNo" class="form-control" />
                    <span asp-validation-for="ISBNNo" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <label asp-for="CopyRightYear" class="control-label"></label>
                    <input asp-for="CopyRightYear" class="form-control" />
                    <span asp-validation-for="CopyRightYear" class="text-danger"></span>
                </div>
           
            <br/>
            <div class="form-group ">
                <br/>
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="ListBook" class="btn btn-primary">Back to List</a>
            </div>
        
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
