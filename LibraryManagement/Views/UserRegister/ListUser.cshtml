@model IEnumerable<LibraryManagement.Models.RegisterUser>

@{
    ViewData["Title"] = "ListUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">User List</h1>

<p>
    <a asp-action="AddRegisteruser" class="btn btn-primary">Create New</a>
<p>@ViewBag.ResponseMessage</p>

<table id="datatablesSimple">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ProfileImagePath)
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EmailId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>

                <td>

                    <img src="~/images/@item.ProfileImagePath" width="50px" height="50px" />
                </td>

                <td>
                    <a asp-action="EditRegisterUser" asp-route-id="@item.UserId"><i class='fa fa-pencil'></i></a> &nbsp;&nbsp;
                    <a asp-action="DetailsUser" asp-route-id="@item.UserId"><i class="fa-regular fa-eye"></i></a> &nbsp;&nbsp;
                    <a asp-action="DeleteRegisterUser" asp-route-id="@item.UserId"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

