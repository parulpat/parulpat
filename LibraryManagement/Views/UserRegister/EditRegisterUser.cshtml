@model LibraryManagement.Models.RegisterViewModel

@{
    ViewData["Title"] = "AddRegisteruser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Edit</h1>

<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="UpdateRegisteruser" asp-controller="UserRegister" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" class="form-control" type="hidden" />
            <div class="form-group row">
                <div class="col-lg-6">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <label asp-for="UserRole" class="control-label"></label>
                    <select asp-for="UserRole" class="form-control">
                        <option value="1">Super Admin</option>
                        <option value="2">Librarian</option>
                        <option value="3">Student</option>
                    </select>
                    <span asp-validation-for="UserRole" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-6">
                    <label asp-for="EmailId" class="control-label"></label>
                    <input asp-for="EmailId" class="form-control" />
                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="text" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-6">
                    <label asp-for="ContactNo" class="control-label"></label>
                    <input asp-for="ContactNo" class="form-control" />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <label asp-for="ProfileImage" class="control-label"></label>
                    <input asp-for="ProfileImage" class="form-control" type="file" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <input asp-for="ProfileImagePath" class="form-control" type="hidden" />
                <span asp-validation-for="ProfileImagePath" class="text-danger"></span>
            </div>
            <br />
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="ListUser" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
  
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
